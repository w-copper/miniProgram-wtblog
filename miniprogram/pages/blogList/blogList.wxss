/* miniprogram/pages/blogList/blogList.wxss */


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  margin-top: 5rpx;
  height: 80rpx;
  width: 100%;
  padding: 0;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: left;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 0rpx;
}

.userinfo-avatar {
  padding-right: 30rpx;
  padding-left: -20rpx;
  /* border: 1px solid; */
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 45rpx;
  height: 45rpx;
}


.userinfo-avatar:after {
  display: none;
  border: none;
  background: #f6f6f6;
}

.search-input {
  border: 1px solid #f6f6f6;
  line-height: 100rpx;
  padding-left: 15rpx;
  padding-right: 100rpx;
  margin-right: 25rpx;
}

.blog-list {
  margin-top: 60rpx;
  width: 100%;
}

.blog-item {
  text-align: center;
  text-decoration: underline;
  margin-bottom: 20rpx;
}